<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple_manage_item"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/permissionIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:srcCompat="@drawable/ic_settings" />

        <TextView
            android:id="@+id/permissionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.Manage.Item.Title"
            tools:text="Настройки" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="28dp" />

        <ImageView
            android:id="@+id/checkedIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:padding="2dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_check" />

    </LinearLayout>

</FrameLayout>