<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="AppTheme">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance">
        <item name="android:fontFamily">@font/font_medium</item>
    </style>

    <style name="TextAppearance.Bold" parent="TextAppearance">
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="TextAppearance.Contact.Name" parent="TextAppearance.Regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.History.Number" parent="TextAppearance.Regular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.History.Input" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.History.Title" parent="TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.History.Clear" parent="TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Manage.UidTitle" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary75</item>
    </style>

    <style name="TextAppearance.Manage.Uid" parent="TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Manage.CountOfChildren" parent="TextAppearance.Regular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>